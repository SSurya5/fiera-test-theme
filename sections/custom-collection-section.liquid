<!-- Section Content -->
{{ 'custom-collection-section.css' | asset_url | stylesheet_tag }}
<div class="featured-collection-slider">
  <h2>{{ section.settings.title }}</h2>
  {%- if section.settings.description != blank
    or section.settings.show_description
    and section.settings.collection.description != empty
  -%}
    <p>{{ section.settings.description -}}</p>
  {%- endif -%}
  <!-- Slider Wrapper -->
  <div class="slider-container">
    <div class="slider">
      {% for product in section.settings.featured_collection.products limit: section.settings.product_limit %}
        <div class="slide">
          <a href="{{ product.url }}">
            <img
              src="{{ product.featured_media | image_url: width: 533 }}"
              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
              alt="{{ product.featured_media.alt | escape }}"
              class="motion-reduce"
              width="{{ product.featured_media.width }}"
              height="{{ product.featured_media.height }}"
            >
            <p>{{ product.title }}</p>
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
  <!-- Slider Navigation Buttons -->
  <button class="prev">‹</button>
  <button class="next">›</button>
</div>

<!-- Section Schema -->
{% schema %}
{
  "name": "Featured Slider",
  "settings": [
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Select Collection"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Featured Collection",
      "label": "Featured Collection"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.featured-collection.settings.description.label"
    },
    {
      "type": "number",
      "id": "product_limit",
      "label": "Number of Products to Display",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Featured Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!-- JavaScript for Slider Functionality -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slider = document.querySelector('.slider');
    const slides = document.querySelectorAll('.slide');
    const prevButton = document.querySelector('.prev');
    const nextButton = document.querySelector('.next');
    let currentIndex = 0;
    let slidesToShow = getSlidesToShow();
    const totalSlides = slides.length;

    function updateSlider(index) {
      slider.style.transform = `translateX(-${index * (100 / slidesToShow)}%)`;
    }

    function getSlidesToShow() {
      if (window.innerWidth >= 1025) {
        return 4;
      } else if (window.innerWidth >= 769) {
        return 3;
      } else {
        return 1;
      }
    }

    prevButton.addEventListener('click', function () {
      if (currentIndex > 0) {
        currentIndex--;
      } else {
        currentIndex = Math.ceil(totalSlides / slidesToShow) - 1;
      }
      updateSlider(currentIndex);
    });

    nextButton.addEventListener('click', function () {
      if (currentIndex < Math.ceil(totalSlides / slidesToShow) - 1) {
        currentIndex++;
      } else {
        currentIndex = 0;
      }
      updateSlider(currentIndex);
    });

    window.addEventListener('resize', function () {
      slidesToShow = getSlidesToShow();
      updateSlider(currentIndex);
    });

    // Initialize the slider
    updateSlider(0);
  });
</script>
